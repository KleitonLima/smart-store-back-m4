// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  favorites Favorite[]
  orders    Order[]

  @@map("user")
}

model Game {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  price       Float
  image       String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  genreId String? @map("genre_id")
  genre   Genre?  @relation(fields: [genreId], references: [id], onDelete: SetNull)

  favorites Favorite[]
  orders    Order[]

  @@map("game")
}

model Bag {
  id        String   @id @default(uuid())
  number    Int      @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  orders Order[]

  @@map("bag")
}

model Genre {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  games Game[]

  @@map("genre")
}

model Favorite {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  gameName String @map("game_id")
  game     Game   @relation(fields: [gameName], references: [name], onDelete: Cascade)

  @@unique([userId, gameName])
  @@map("favorite")
}

model Order {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")

  bagNumber Int? @map("bag_number")
  bag       Bag? @relation(fields: [bagNumber], references: [number], onDelete: SetNull)

  userId String? @map("user_id")
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  games Game[]

  @@map("order")
}
